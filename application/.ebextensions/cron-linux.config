files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            04 15 * * * root /usr/local/bin/myscript.sh   
            04 15 * * * root /usr/local/bin/myscript2.sh 

    "/usr/local/bin/myscript.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            !/bin/bash
            date > /tmp/date
            curl https://api-dev.link.stream/v1/c_notification/testing_cron
            exit 0

    "/usr/local/bin/myscript2.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            !/bin/bash
            date > /tmp/date
            curl https://api-dev.link.stream/v1/c_notification/testing_cron_2
            exit 0
commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak"